<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Africa"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Developer Scholarship"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:gravity="center"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/txt_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Submission"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/toolbar2"
        android:textColor="@color/orange"
        android:textAlignment="center"
        android:textSize="18sp"
        />
 <LinearLayout
     android:id="@+id/lay1"
     android:layout_width="match_parent"
     android:layout_below="@+id/txt_project"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
    <EditText
        android:id="@+id/fName"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:hint="@string/fn_edit"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="@color/gray2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/edit_text" />
    <EditText
        android:id="@+id/lName"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColorHint="@color/gray1"
        android:hint="@string/ln_edit"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        />

 </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:hint="@string/em_edit"
        android:textSize="20sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textColorHint="@color/gray2"
        android:background="@drawable/edit_text"
        />
        <EditText
            android:id="@+id/git"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:hint="@string/git_edit"
            android:textSize="20sp"
            android:inputType="text"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textColorHint="@color/gray2"
            android:background="@drawable/edit_text"
            />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/sub"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/submit"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</RelativeLayout>